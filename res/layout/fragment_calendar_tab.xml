<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 年月ヘッダー -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="2"
		android:background="@drawable/text_month_line"
        android:orientation="horizontal" >
        	<TextView
        	    android:id="@+id/header_month_text"
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:gravity="fill"
        	    android:textSize="25sp"
        	    android:textColor="#FFFFFF" />
	</LinearLayout>

	<!-- 曜日ラベル -->
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/header_su_text"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/text_week_line"
	        android:gravity="center"
	        android:text="@string/day"
	        android:textColor="#FF6860" />

		<TextView
		    android:id="@+id/header_mo_text"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:background="@drawable/text_week_line"
		    android:gravity="center"
		    android:text="@string/month" />

	    <TextView
	        android:id="@+id/header_tu_text"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/text_week_line"
	        android:gravity="center"
	        android:text="@string/tue" />

		<TextView
		    android:id="@+id/header_we_text"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:background="@drawable/text_week_line"
		    android:gravity="center"
		    android:text="@string/wed" />

	    <TextView
	        android:id="@+id/header_th_text"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/text_week_line"
	        android:gravity="center"
	        android:text="@string/thu" />

	    <TextView
	        android:id="@+id/header_fr_text"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/text_week_line"
	        android:gravity="center"
	        android:text="@string/fri" />

	    <TextView
	        android:id="@+id/header_sa_text"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/text_week_line"
	        android:gravity="center"
	        android:text="@string/sat"
	        android:textColor="#3CDCB6" />

	</LinearLayout>

	<!-- 第1週目 -->
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="3"
        android:orientation="horizontal"
        android:baselineAligned="false" >

	    <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/text_day_line" >
            <TextView
				android:id="@+id/one_su_text"
				android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				android:gravity="end" />
        </LinearLayout>

        <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/text_day_line" >
            <TextView
				android:id="@+id/one_mo_text"
				android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				android:gravity="end" />
        </LinearLayout>

        <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/text_day_line" >
            <TextView
				android:id="@+id/one_tu_text"
				android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				android:gravity="end" />
        </LinearLayout>

        <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/text_day_line" >
            <TextView
				android:id="@+id/one_we_text"
				android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				android:gravity="end" />
        </LinearLayout>

        <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/text_day_line" >
            <TextView
				android:id="@+id/one_th_text"
				android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				android:gravity="end" />
        </LinearLayout>

        <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/text_day_line" >
            <TextView
				android:id="@+id/one_fr_text"
				android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				android:gravity="end" />
        </LinearLayout>

        <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/text_day_line" >
            <TextView
				android:id="@+id/one_sa_text"
				android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				android:gravity="end" />
        </LinearLayout>

	</LinearLayout>

    <!-- 第2週目 -->
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="3"
        android:orientation="horizontal"
        android:baselineAligned="false" >

	    <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
